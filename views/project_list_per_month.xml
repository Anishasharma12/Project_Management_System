<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_list_per_month_id" model="ir.actions.act_window">
            <field name="name">Showing Project List Per Month</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">current</field>
            <field name="view_id"/>
            <field name="res_model">project_list_per_month</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_project_id': active_id}</field>
            <field name="domain">[('project_id', '=', active_id)]</field>
        </record>
        <record id="project_list_per_month_tree_view" model="ir.ui.view">
                <field name="name">project_list_per_month.tree.view</field>
                <field name="model">project_list_per_month</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="month_id"  />
                        <!-- <field name="project_id" invisible="1" colspan="0"/> -->
                        <button name="%(month_id)d" string="Month" type="action" class="btn-primary"
                        context="{'default_month_id': active_id}"/>
                        <field name="op_planned_hours" />    
                        <field name="op_actual_hours" />
                        <field name="planned_cost" />
                        <field name="actual_cost" />
                    </tree>
                </field>
            </record>
            <record id="project_list_per_month_form_view" model="ir.ui.view">
                <field name="name">project_list_per_month.form.view</field>
                <field name="model">project_list_per_month</field>
                <field name="arch" type="xml">
                    <form string="Project">
                    <sheet>
                        <group>
                         <field name="project_id" invisible="1"/>
                            <field name="month_id" />
                            <field name="op_planned_hours" />    
                            <field name="op_actual_hours" />
                            <field name="planned_cost" />
                            <field name="actual_cost" />
                        </group>
                    </sheet>
                    </form>
                </field>
            </record>
    </data>
</odoo>