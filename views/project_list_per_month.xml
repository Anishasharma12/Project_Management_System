<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_list_per_month_id" model="ir.actions.act_window">
            <field name="name">Open Another Model Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">current</field>
            <field name="view_id"/>
            <field name="res_model">project_list_per_month</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': True}</field>
            
        </record>

        <record id="project_list_per_month_tree_view" model="ir.ui.view">
                <field name="name">project_list_per_month.tree.view</field>
                <field name="model">project_list_per_month</field>
                <field name="arch" type="xml">

                    <tree>
                        <button name="%(month_id)d" string="summery" type="action" class="btn-primary"/>

                        <field name="month" />
                        <field name="op_hours_planned" />
                        <field name="op_hours_actual" />
                        <field name="planned_cost" />
                        <field name="actual_cost" />
                    </tree>
                </field>
            </record>
            <record id="project_list_per_month_form_view" model="ir.ui.view">
                <field name="name">project_list_per_month.form.view</field>
                <field name="model">project_list_per_month</field>
                <field name="arch" type="xml">
                    <form string="Project">
                    <sheet>
                        <group>
                            <field name="month" />
                            <field name="project_code" widget="many2one"/>
                            <field name="project_list_per_month_employee" widget="many2many_tags"/>
                            <field name="op_hours_planned" />
                            <field name="op_hours_actual" />
                            <field name="planned_cost" />
                            <field name="actual_cost" />
                        </group>
                    </sheet>
                    </form>
                </field>
            </record>
    </data>
</odoo>