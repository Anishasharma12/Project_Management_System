<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_assign_per_month_id" model="ir.actions.act_window">
            <field name="name">employee assign per month view</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">current</field>
            <field name="view_id" />
            <field name="res_model">employee_assign_per_month</field>
            <field name="view_mode">form</field>
            <field
                name="context"
            >{'default_employees_assign': active_id}</field>
            <field name="domain">[('employees_assign', '=', active_id)]</field>
        </record>
            <record
            id="employee_assign_per_month_id_form_view"
            model="ir.ui.view">
                <field name="name">employee_assign_per_month.form.view</field>
                <field name="model">employee_assign_per_month</field>
                <field name="arch" type="xml">
                     <form string="Employee Assign Per Month">
                        <sheet> 
                            <group>
                                <field name="line_ids">
                                    <tree string="Employee Assign per month" editable="bottom">
                                        <field name="project_employee_assign_id" />
                                        <field name="project_assign_code" />
                                        <field name="project_name" />
                                        <field name="planning_hours" />
                                        <field name="month_04" />
                                        <field name="month_05" />
                                        <field name="month_06" />
                                        <field name="month_07" />
                                        <field name="month_08" />
                                        <field name="month_09" />
                                        <field name="month_10" />
                                        <field name="month_11" />
                                        <field name="month_12" />
                                        <field name="month_01" />
                                        <field name="month_02" />
                                        <field name="month_03" />
                                    </tree>
                                </field>
                            </group>
                            <group string="Totals">
                                    <field name="month_04_total" readonly="1"/>
                                    <field name="month_05_total" readonly="1"/>
                                    <field name="month_06_total" readonly="1"/>
                                    <field name="month_07_total" readonly="1"/>
                                    <field name="month_08_total" readonly="1"/>
                                    <field name="month_09_total" readonly="1"/>
                                    <field name="month_10_total" readonly="1"/>
                                    <field name="month_11_total" readonly="1"/>
                                    <field name="month_12_total" readonly="1"/>
                                    <field name="month_01_total" readonly="1"/>
                                    <field name="month_02_total" readonly="1"/>
                                    <field name="month_03_total" readonly="1"/>
                            </group>
                    </sheet>
                    </form>
                </field>
            </record>
  </data>
</odoo>
