<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_assign_per_month_id" model="ir.actions.act_window">
            <field name="name">employee assign per month view</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">current</field>
            <field name="view_id" />
            <field name="res_model">employee_assign_per_month</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_employees_assign': active_id}</field>
            <field name="domain">[('employees_assign', '=', active_id)]</field>
        </record>
        <record id="employee_assign_per_month_tree_view" model="ir.ui.view">
                <field name="name">Employee_assign_per_month.tree.view</field>
                <field name="model">employee_assign_per_month</field>
                <field name="arch" type="xml">
                    <tree editable="bottom">
                            <field name="name" />
                            <field name="month_04"/>
                            <field name="month_05"/>
                            <field name="month_06"/>
                            <field name="month_07"/>
                            <field name="month_08"/>
                            <field name="month_09"/>
                            <field name="month_10"/>
                            <field name="month_11"/>
                            <field name="month_12"/>
                            <field name="month_01"/>
                            <field name="month_02"/>
                            <field name="month_03"/>
                            <button name="add_item" type="object" string="Add item"/>
                    </tree>
                </field>
            </record>
            <record id="employee_assign_per_month_id_form_view" model="ir.ui.view">
                <field name="name">employee_assign_per_month.form.view</field>
                <field name="model">employee_assign_per_month</field>
                <field name="arch" type="xml">
                    <form string="Project">
                    <sheet>
                        <group>
                            <field name="project_id" widget="many2many_tags" />
                            <field name="name" />
                            <field name="code" />
                            <field name="month_04"/>
                            <field name="month_05"/>
                            <field name="month_06"/>
                            <field name="month_07"/>
                            <field name="month_08"/>
                            <field name="month_09"/>
                            <field name="month_10"/>
                            <field name="month_11"/>
                            <field name="month_12"/>
                            <field name="month_01"/>
                            <field name="month_02"/>
                            <field name="month_03"/>
                        </group>
                    </sheet>
                    </form>
                </field>
            </record>

  </data>
</odoo>
