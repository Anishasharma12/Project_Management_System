                                </field>
                            </group>
                            <group string="Totals">
                                    <field name="month_04_total" readonly="1"/>
                                    <field name="month_05_total" readonly="1"/>
                                    <field name="month_06_total" readonly="1"/>
                                    <field name="month_07_total" readonly="1"/>
                                    <field name="month_08_total" readonly="1"/>
                                    <field name="month_09_total" readonly="1"/>
                                    <field name="month_10_total" readonly="1"/>
                                    <field name="month_11_total" readonly="1"/>
