<?xml version="1.0"?>
<odoo>

    <record id="project_employee_assign_master_tree_view" model="ir.ui.view">
        <field name="name">project.employee.assign.master.tree.view</field>
        <field name="model">project.employee.assign.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />           
                <field name="project_code"/> 
                <field name="employee_code"/> 
                <field name="year"/> 
                <field name="month"/> 
                <field name="op_hours_planned"/> 
                <field name="op_hours_actual"/> 
                <!-- <field name="employee_project_per_month" invisible="1"/> -->
            </tree>
        </field>
    </record>
    <record id="project_employee_assign_master_form_view" model="ir.ui.view">
        <field name="name">project.employee.assign.master.form.view</field>
        <field name="model">project.employee.assign.master</field>
        <field name="arch" type="xml">
            <form string="Project">
            <sheet>
                <group>
                <!-- <field name="id" />            -->
                <field name="project_code" required="1" options="{'no_create': True, 'no_create_edit': True}"/> 
                <field name="employee_code" required="1" options="{'no_create': True, 'no_create_edit': True}"/> 
                <field name="year" widget="selection" options="{'no_open': True}"/>
                <field name="month" required="1"/> 
                <field name="op_hours_planned" required="1"/> 
                <field name="op_hours_actual" required="1"/> 
                <!-- <field name="employee_project_per_month" invisible="1"/> -->
                </group>
            </sheet>
            </form>
        </field>
    </record>
</odoo>