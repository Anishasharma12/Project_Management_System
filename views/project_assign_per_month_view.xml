            <record id="project_assign_per_month_id_form_view" model="ir.ui.view">
                <field name="name">project_assign_per_month.form.view</field>
                <field name="model">project_assign_per_month</field>
                <field name="arch" type="xml">
                <form string="Employee Assign Per Month">
                        <sheet>
                            <group>
                                <field name="project_id" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="line_ids">
                                    <tree string="Employee Assign per month">
                                        <field name="name"/>
                                        <field name="month_04"/>
                                        <field name="month_05"/>
                                        <field name="month_06"/>
                                        <field name="month_07"/>
                                        <field name="month_08"/>
                                        <field name="month_09"/>
                                        <field name="month_10"/>
                                        <field name="month_11"/>
                                        <field name="month_12"/>
                                        <field name="month_01"/>
                                        <field name="month_02"/>
                                        <field name="month_03"/>
                                    </tree>
                                </field>
                            </group>
                    <!-- Button outside of the tree view to ensure it doesn't repeat -->
                            <footer>
                                <button name="action_add_item" string="Add Item" type="object" class="btn btn-primary" icon="fa-plus"/>
                            </footer>
                </sheet>
            </form>
                </field>
            </record>
    </data>
