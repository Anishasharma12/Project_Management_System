<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="project_list_per_month_per_employee_tree_view" model="ir.ui.view">
        <field name="name">project_list_per_month_per_employee.tree.view</field>
        <field name="model">project_list_per_month_per_employee</field>
        <field name="arch" type="xml">
          <tree>
              <field name="employee_name" />
              <button name="%(employee_assign_per_month_id)d" string="Employee" type="action" class="btn-primary"
              context="{'default_employees_assign': active_id}"/>
              <field name="op_planned_hours" />     
              <field name="op_actual_hours" />
              <field name="planned_cost" />
              <field name="actual_cost" />
          </tree>
        </field>
            </record>
            <record id="project_list_per_month_per_employee_form_view" model="ir.ui.view">
                <field name="name">project_list_per_month_per_employee.form.view</field>
                <field name="model">project_list_per_month_per_employee</field>
                <field name="arch" type="xml">
                    <form string="Project">
                    <sheet>
                        <group>
                            <!-- <field name= "month_id" /> -->
                            <field name= "employees_assign" />
                            <field name= "employee_code" />
                            <field name="employee_name" />
                            <field name="op_planned_hours" />     
                            <field name="op_actual_hours" />
                            <field name="planned_cost" />
                            <field name="actual_cost" />
                        </group>
                    </sheet>
                    </form>
                </field>
            </record>
  </data>
</odoo>
