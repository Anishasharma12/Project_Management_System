    <record id="month_id" model="ir.actions.act_window">
        <field name="name">Open Another Model Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">current</field>
        <field name="view_id" />
        <field name="res_model">project_list_per_month_per_employee</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': True}</field> <!-- Ensure create button is enabled -->
    </record>
  <record id="project_list_per_month_per_employee_form" model="ir.ui.view">
    <field name="name">project_list_per_month_per_employee.form</field>
    <field name="model">project_list_per_month_per_employee</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="op_hours_planned" />
            <field name="op_hours_actual" />
            <field name="planned_cost" />
            <field name="actual_cost" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="project_list_per_month_per_employee_tree" model="ir.ui.view">
    <field name="name">project_list_per_month_per_employee.tree</field>
    <field name="model">project_list_per_month_per_employee</field>
    <field name="arch" type="xml">
      <tree>
        <field name="id"/>
        <field name="op_hours_planned" />
        <field name="op_hours_actual" />
        <field name="planned_cost" />
        <field name="actual_cost" />
      </tree>
    </field>
  </record>
