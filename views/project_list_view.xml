<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wb_project_employee_master_tree_view" model="ir.ui.view">
        <field name="name">wb.project_listview.tree.view</field>
        <field name="model">wb.project_listview</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id" />
                <button name="action_edit" type="object" string="Edit"/>
                <!-- <field name="summery" widget="url" options="{'url': 'action_open_another_model_form'}"/> -->
                <button string="Summery" type="object" name="action_view_summary" class="oe_highlight"/>
                <field name="code"/> 
                <field name="name"/> 
                <field name="op_planned_hours"/> 
                <field name="op_actual_hours"/> 
                <field name="planned_cost"/> 
                <field name="actual_cost"/> 
            </tree>
        </field>
    </record>
    <record id="wb_project_employee_master_form_view" model="ir.ui.view">
        <field name="name">wb.project_listview.tree.view</field>
        <field name="model">wb.project_listview</field>
        <field name="arch" type="xml">
            <form string="Project">
            <sheet>
                <group>
                    <field name="project_id" />           
                    <field name="code" required="1"/> 
                    <field name="name" required="1"/> 
                    <field name="op_planned_hours"/> 
                    <field name="op_actual_hours"/> 
                    <field name="planned_cost"/> 
                    <field name="actual_cost"/> 
                </group>
            </sheet>
            </form>
        </field>
    </record>
</odoo>
