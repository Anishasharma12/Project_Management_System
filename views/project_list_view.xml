<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_main_menu" model="ir.actions.act_window">
    <field name="name">Project List View</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">wb.project_listview</field>
    <field name="view_mode">tree,form</field>
  </record>
    <record id="wb_project_employee_master_tree_view" model="ir.ui.view">
                <field name="name">wb.project_listview.tree.view</field>
                <field name="model">wb.project_listview</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="project_id" invisible="1" />   
                        <button name="action_edit" type="object" string="Edit" />
                        <button name="action_details" type="object" string="Summery" />  
                        <field name="code" required="1"/> 
                        <field name="name" required="1"/> 
                        <field name="op_planned_hours" required="1"/> 
                        <field name="op_actual_hours" required="1"/> 
                        <field name="planned_cost" required="1"/> 
                        <field name="actual_cost" required="1"/> 
                    </tree>
                </field>
            </record>
            <record id="wb_project_employee_master_form_view" model="ir.ui.view">
                <field name="name">wb.project_listview.tree.view</field>
                <field name="model">wb.project_listview</field>
                <field name="arch" type="xml">
                    <form string="Project">
                    <sheet>
                        <group>
                            <field name="project_id" />           
                            <field name="code" required="1"/> 
                            <field name="name" required="1"/> 
                        </group>
                    </sheet>
                    </form>
                </field>
            </record>

  <menuitem id="main_menu"
        name="Project List View"
        action= "action_main_menu"
        sequence="10"/>

</odoo>
